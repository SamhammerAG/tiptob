{
  "name": "@samhammer/yarte",
  "version": "2.0.0",
  "description": "Yet another rich text editor based on TipTap",
  "type": "module",
  "main": "./dist/web-components.js",
  "module": "./dist/web-components.js",
  "exports": {
    "./web-components": {
      "import": "./dist/web-components.js"
    },
    "./extensions": {
      "import": "./dist/extensions.js",
      "types": "./dist/extensions.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "watch": "vite build --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamhammerAG/yarte.git"
  },
  "homepage": "https://github.com/SamhammerAG/yarte",
  "keywords": [
    "richtext",
    "editor",
    "tiptap"
  ],
  "author": "Samhammer AG",
  "license": "MIT",
  "dependencies": {
    "@tiptap/core": "^2.11.5",
    "@tiptap/extension-bubble-menu": "^2.11.7",
    "@tiptap/extension-image": "^2.11.7",
    "@tiptap/pm": "^2.11.5",
    "dompurify": "^3.2.4"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "eslint-plugin-svelte": "^2.46.1",
    "svelte": "^5.20.5",
    "svelte-check": "^4.1.4",
    "svelte-eslint-parser": "^0.43.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vite-svg-loader": "^5.1.0"
  }
}
