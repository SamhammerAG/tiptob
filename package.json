{
  "name": "@samhammer/tiptob",
  "version": "2.2.0",
  "description": "TipTap ToolBox",
  "type": "module",
  "main": "./dist/web-components.js",
  "module": "./dist/web-components.js",
  "exports": {
    "./web-components": {
      "import": "./dist/web-components.js"
    },
    "./extensions": {
      "import": "./dist/extensions.js",
      "types": "./dist/extensions.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "watch": "vite build --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamhammerAG/yarte.git"
  },
  "homepage": "https://github.com/SamhammerAG/yarte",
  "keywords": [
    "richtext",
    "editor",
    "tiptap"
  ],
  "author": "Samhammer AG",
  "license": "MIT",
  "dependencies": {
    "@tiptap/core": "^2.12.0",
    "@tiptap/extension-bubble-menu": "^2.12.0",
    "@tiptap/extension-image": "^2.12.0",
    "@tiptap/extension-highlight": "~2.12.0",
    "@tiptap/pm": "^2.12.0",
    "dompurify": "^3.2.5"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "eslint-plugin-svelte": "^2.46.1",
    "svelte": "^5.28.2",
    "svelte-check": "^4.1.6",
    "svelte-eslint-parser": "^1.1.3",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vite-svg-loader": "^5.1.0"
  }
}
