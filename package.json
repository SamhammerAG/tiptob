{
  "name": "@samhammer/tiptob",
  "version": "2.2.2",
  "description": "TipTap ToolBox",
  "type": "module",
  "main": "./dist/web-components.js",
  "module": "./dist/web-components.js",
  "exports": {
    "./web-components": {
      "import": "./dist/web-components.js"
    },
    "./extensions": {
      "import": "./dist/extensions.js",
      "types": "./dist/extensions.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "watch": "vite build --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamhammerAG/tiptob.git"
  },
  "homepage": "https://github.com/SamhammerAG/tiptob",
  "keywords": [
    "toolbox",
    "editor",
    "tiptap"
  ],
  "author": "Samhammer AG",
  "license": "MIT",
  "dependencies": {
    "@tiptap/core": "^3.0.1",
    "@tiptap/extension-bubble-menu": "^3.0.1",
    "@tiptap/extension-highlight": "~3.0.1",
    "@tiptap/extension-image": "^3.0.1",
    "@tiptap/pm": "^3.0.1",
    "dompurify": "^3.2.6"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "eslint-plugin-svelte": "^3.10.1",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "svelte-eslint-parser": "^1.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vite-svg-loader": "^5.1.0"
  }
}